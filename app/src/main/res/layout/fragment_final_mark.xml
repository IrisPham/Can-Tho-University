<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.visualstudio.canthouniversity.Fragments.FinalMarkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/linear_margin_top"
        android:layout_marginLeft="@dimen/linear_margin_left"
        android:layout_marginRight="@dimen/linear_margin_right"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/linear_pandding"
        android:background="@drawable/layout_shape_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/linear_margin_top"
            android:text="Tổng điểm các điều"
            android:textColor="#0E4A92"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/linear_margin_top"
            android:background="@drawable/customshapeheadermarrk"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Sinh viên đánh giá"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Cố vấn học tập đánh giá"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Điểm rèn luyện đạt"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/linear_margin_bottom"
            android:layout_marginTop="@dimen/linear_margin_top"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/texview_studentRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#D50000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/texview_teacherRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#D50000"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/texview_rateFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="10"
                android:textColor="#D50000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/Button_backHome"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Trở về trang chủ"/>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/Button_reRateMark"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chấm điểm lại" />
    </LinearLayout>

</ScrollView>
